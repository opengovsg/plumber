{
  "name": "@plumber/backend",
  "version": "0.3.0",
  "license": "AGPL-3.0",
  "description": "The open source Zapier alternative. Build workflow automation without spending time and money.",
  "scripts": {
    "setup": "docker-compose -f docker-compose.dev.yml up -d",
    "teardown": "docker-compose -f docker-compose.dev.yml down",
    "dev": "ts-node-dev --exit-child src/server.ts",
    "worker": "ts-node-dev --exit-child src/worker.ts",
    "prebuild": "rm -rf ./dist",
    "build": "tsc && npm run copy-statics",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker.js",
    "lint": "eslint . --ignore-path ../../.eslintignore",
    "db": "DOTENV_CONFIG_PATH=.env knex",
    "db:migration:create": "npm run db -- migrate:make",
    "db:list": "npm run db -- migrate:list",
    "db:rollback": "Dnpm run db -- migrate:rollback",
    "db:migrate": "npm run db -- migrate:latest",
    "copy-statics": "copyfiles -u 1 src/**/*.{graphql,json,svg} dist"
  },
  "dependencies": {
    "@bull-board/express": "^3.10.1",
    "@graphql-tools/graphql-file-loader": "^7.3.4",
    "@graphql-tools/load": "^7.5.2",
    "@opengovsg/formsg-sdk": "0.10.0",
    "@plumber/types": "file:../types",
    "@types/luxon": "^2.3.1",
    "ajv-formats": "^2.1.1",
    "axios": "0.24.0",
    "bcrypt": "^5.0.1",
    "bullmq": "^3.0.0",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0",
    "email-validator": "2.0.4",
    "express": "~4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-graphql": "^0.12.0",
    "graphql-middleware": "^6.1.15",
    "graphql-shield": "^7.5.0",
    "graphql-tools": "^8.2.0",
    "graphql-type-json": "^0.3.2",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^9.0.0",
    "knex": "2.4.2",
    "lodash.get": "^4.4.2",
    "luxon": "2.5.2",
    "morgan": "^1.10.0",
    "multer": "1.4.5-lts.1",
    "objection": "^3.0.0",
    "pg": "^8.7.1",
    "typescript": "^4.6.3",
    "winston": "^3.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bull": "^3.15.8",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.0.2",
    "@types/express": "^4.17.15",
    "@types/http-errors": "^1.8.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash.get": "^4.4.6",
    "@types/morgan": "^1.9.3",
    "@types/multer": "1.4.7",
    "@types/pg": "^8.6.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0"
  }
}
