{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2021"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@plumber/types",
      "./src/types",
    ]
  },
  "include": ["src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
